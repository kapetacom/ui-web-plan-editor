{
    "kind": "kapeta/block-type-service:1.2.3",
    "metadata": {
        "name": "kapeta/image",
        "title": "Image Service"
    },
    "spec": {
        "target": {
            "kind": "kapeta/language-target-java-spring-boot",
            "options": {
                "groupId": "org.mycompany",
                "artifactId": "service-images",
                "basePackage": "org.mycompany.services.images"
            }
        },
        "entities": {
            "types": [
                {
                    "name": "image",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "consumers": [
            {
                "kind": "kapeta/resource-type-postgresql",
                "metadata": {
                    "name": "imagesdb"
                }
            }
        ],
        "providers": [
            {
                "kind": "kapeta/resource-type-rest-api",
                "metadata": {
                    "name": "images"
                },
                "spec": {
                    "methods": {
                        "createimage": {
                            "description": "Create image",
                            "method": "POST",
                            "path": "/images/{id}",
                            "arguments": {
                                "id": {
                                    "type": "string",
                                    "transport": "path"
                                },
                                "image": {
                                    "type": "image",
                                    "transport": "body"
                                }
                            },
                            "responseType": {
                                "$ref": "image"
                            }
                        },
                        "getimage": {
                            "description": "Get image by id",
                            "method": "GET",
                            "path": "/images/{id}",
                            "arguments": {
                                "id": {
                                    "type": "string",
                                    "transport": "path"
                                }
                            },
                            "responseType": "image"
                        },
                        "deleteimage": {
                            "description": "Delete image by id",
                            "method": "DELETE",
                            "path": "/images/{id}",
                            "arguments": {
                                "id": {
                                    "type": "string",
                                    "transport": "path"
                                }
                            }
                        }
                    }
                }
            }
        ]
    }
}
